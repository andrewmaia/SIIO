* {
	margin:0;
	padding:0;
}

img {
	border:none;
} 

hr
{
	display:none;
}



#principal {
	width:900px;
	margin:0 auto;
}

/***
Login
*/

#login 
{
	text-align:right;
	width:100%;
	margin-right: 8px; 
	margin-top: 2px; 
}

/***
Topo
*/

#topo
{
	text-align:center;
	padding: 40px 40px 40px 40px;
}


/***
Pesquisa
*/

#pesquisa .txtPesquisa
{
	width:400px;
	height:20px;
}

#pesquisa .btnPesquisar
{
	height:30px;
	width:100px;
	background-color: #fff;
	color: #000000;
	font-weight:bold; 
	
}

#pesquisa .btnPesquisar:hover
{
	background-color: #E6E8FA;
}

#pesquisa
{
	text-align:center;
	padding-bottom: 100px;	
}

/***
Mais Recentes
*/

#maisRecentes
{
	width: 250px;
	float:left;
}

#maisRecentes .ideia
{
	margin-top: 10px;
}

#maisRecentes .ideia a
{
	text-decoration:none;
	color:#000; 
}

#maisRecentes .ideia:hover
{
	background-color: #E6E8FA;
}

#maisRecentes h2
{
	font: bold 20px Trebuchet Ms, Verdana, Arial, Tahoma, Sans-Serif;
	color:#000;
	padding:20 px 0  0; 
	
}

